<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.login_admin"
    android:background="@color/logo_color">
    <android.support.constraint.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:id="@+id/header"

        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_marginEnd="37dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="37dp" />
        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="88"
        android:orientation="vertical"
        android:paddingRight="37dp"
        android:paddingLeft="37dp">





        <LinearLayout
            android:id="@+id/phone_auth_fields"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >




            <LinearLayout
                android:layout_marginTop="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/lay_cod"
                android:visibility="visible">

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="0dp"

                    android:fontFamily="@font/saudi"
                    android:gravity="center"
                    android:text="@string/login"
                    android:textColor="@color/dark_mint"
                    android:textSize="28sp"

                    android:textStyle="bold" />
                <EditText

                    android:drawablePadding="8dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="10dp"
                    android:padding="8dp"
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/saudi"
                    android:textColor="@color/white"

                    android:inputType="textEmailAddress"
                    android:gravity="start"
                    android:background="@drawable/bk_text"
                    android:hint="@string/email"/>
                <EditText
                    android:drawablePadding="8dp"

                    android:layout_marginBottom="10dp"
                    android:padding="8dp"
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/saudi"

                    android:textColor="@color/white"
                    android:inputType="textPassword"
                    android:gravity="end"
                    android:background="@drawable/bk_text"
                    android:hint="كود التحقيق"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"

                    >



                    <Button

                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:textColor="#fff"
                        android:id="@+id/login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="تحقق"
                        android:fontFamily="@font/saudi"
                        android:background="@drawable/bk_button_shape2"
                        android:textSize="20sp"/>

                    <ProgressBar
                        android:visibility="gone"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/progress"
                        />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/signed_in_buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:visibility="gone"
            android:weightSum="1.0">

            <Button
                android:id="@+id/sign_out_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="scontinue" />

        </LinearLayout>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>