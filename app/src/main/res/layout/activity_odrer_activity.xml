<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Odrer_activity"
   >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"
        android:background="@color/logo_color">
        <View
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="1dp"
            android:background="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Myusers"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/saudi"
            android:textSize="22dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"/>


        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@android:drawable/ic_menu_close_clear_cancel"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout

        android:padding="10dp"
        android:background="@color/logo_color"
        android:id="@+id/cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cl1"

        app:layout_constraintRight_toRightOf="parent">
        <View
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/address"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="1dp"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            app:layout_constraintRight_toRightOf="parent"
app:layout_constraintTop_toBottomOf="@+id/t2"            android:fontFamily="@font/saudi"/>
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            app:layout_constraintRight_toLeftOf="@+id/t1"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@+id/t2"
            android:fontFamily="@font/saudi"/>
        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/code"
            app:layout_constraintRight_toRightOf="parent"
app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/saudi"/>
        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/code"
            app:layout_constraintRight_toLeftOf="@+id/t2"
            android:layout_marginRight="10dp"
app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/saudi"/>


        <TextView
            android:id="@+id/poinDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="......"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:fontFamily="@font/saudi"/>
        <TextView
            android:id="@+id/t22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pointDay"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@+id/poinDay"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="parent"            android:fontFamily="@font/saudi"/>
        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/t1"
            android:fontFamily="@font/saudi"/>
        <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone"
        app:layout_constraintRight_toLeftOf="@+id/t1"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@+id/t1"
        android:fontFamily="@font/saudi"/>

        <TextView
            android:id="@+id/t5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallet"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/t3"
            android:fontFamily="@font/saudi"/>
        <TextView
            android:id="@+id/wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000 EGP"
            app:layout_constraintRight_toLeftOf="@+id/t5"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@+id/t3"
            android:fontFamily="@font/saudi"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/wallet"
            android:id="@+id/hs"
            android:layout_marginTop="10dp"
            >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <Button
                  android:padding="3dp"
                  android:drawableLeft="@android:drawable/ic_menu_delete"
                  android:fontFamily="@font/saudi"
                  android:layout_width="wrap_content"
                  android:layout_height="30dp"
                  android:id="@+id/delete"
                  android:textColor="@color/white"
                  android:text="@string/delete"

                  android:background="@drawable/bk_button_logout"/>

              <Button
                  android:layout_marginLeft="5dp"
                  android:padding="3dp"
                  android:drawableLeft="@android:drawable/ic_menu_mapmode"
                  android:fontFamily="@font/saudi"
                  android:layout_width="wrap_content"
                  android:layout_height="30dp"
                  android:id="@+id/gomap"
                  android:textColor="@color/white"
                  android:text="@string/gomap"

                  android:background="@drawable/bk_button_logout"/>
              <Button
                  android:layout_marginLeft="5dp"
                  android:padding="3dp"
                  android:drawableLeft="@android:drawable/ic_menu_view"
                  android:fontFamily="@font/saudi"
                  android:layout_width="wrap_content"
                  android:layout_height="30dp"
                  android:id="@+id/pay"
                  android:textColor="@color/white"
                  android:text="@string/pay"

                  android:background="@drawable/bk_button_logout"/>

              <Button
                  android:layout_marginLeft="5dp"
                  android:padding="3dp"
                  android:drawableLeft="@android:drawable/ic_input_add"
                  android:fontFamily="@font/saudi"
                  android:layout_width="wrap_content"
                  android:layout_height="30dp"
                  android:id="@+id/add_order"
                  android:textColor="@color/white"
                  android:text="@string/add_order"

                  android:background="@drawable/bk_button_logout"/>

              <Button
              android:layout_marginLeft="5dp"
              android:padding="3dp"
              android:drawableLeft="@android:drawable/ic_menu_month"
              android:fontFamily="@font/saudi"
              android:layout_width="wrap_content"
              android:layout_height="30dp"
              android:id="@+id/pointment"
              android:textColor="@color/white"
              android:text="@string/point"

              android:background="@drawable/bk_button_logout"/>
          </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الوادي / الجزائر "
            android:gravity="center"
android:layout_marginTop="10dp"
           app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:drawableRight="@drawable/ic_store"
            android:layout_marginRight="10dp"
            android:textColor="@color/dark_mint"
            app:layout_constraintTop_toBottomOf="@+id/hs"
            android:fontFamily="@font/saudi"/>



    </android.support.constraint.ConstraintLayout>
    <android.support.design.widget.TabLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cl"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/tab"
        style="@style/Tablayout_order"
        android:background="@color/logo_color"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tab"
        app:layout_constraintRight_toRightOf="parent"></android.support.v4.view.ViewPager>


</android.support.constraint.ConstraintLayout>