<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Odrer_activity"
    android:background="@drawable/logo_back">


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <android.support.constraint.ConstraintLayout
               android:id="@+id/cl1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               android:padding="10dp">
               <View
                   android:layout_width="match_parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   android:layout_height="1dp"
                   android:background="@color/white"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/All_orders"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   android:fontFamily="@font/saudi"
                   android:textSize="22dp"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:textColor="@color/white"/>


               <ImageView
                   android:id="@+id/back_btn"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:src="@android:drawable/ic_menu_close_clear_cancel"/>
           </android.support.constraint.ConstraintLayout>
           <android.support.constraint.ConstraintLayout

               android:padding="10dp"
               android:background="#90FFFFFF"
               android:id="@+id/cl"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@+id/cl1"

               app:layout_constraintRight_toRightOf="parent">
               <View
                   android:visibility="gone"
                   android:layout_width="match_parent"
                   android:layout_marginTop="2dp"
                   app:layout_constraintTop_toBottomOf="@+id/filter"
                   app:layout_constraintRight_toRightOf="parent"
                   android:layout_height="1dp"
                   android:background="@color/white"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   android:id="@+id/ln"
                   android:weightSum="2">
                   <Button
                       android:layout_weight="1"
                       android:layout_marginRight="10dp"
                       android:background="@drawable/bk_spinner"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:text="@string/todate"
                       android:textColor="@color/white"
                       android:textColorHint="@color/dark_mint"
                       android:id="@+id/todate"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintLeft_toLeftOf="parent"
                       app:layout_constraintRight_toLeftOf="@+id/indate"
                       android:fontFamily="@font/saudi"
                       />
                   <Button
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_marginRight="3dp"
                       android:layout_height="wrap_content"
                       android:text="@string/indate"
                       android:id="@+id/indate"
                       android:background="@drawable/bk_spinner"


                       android:fontFamily="@font/saudi"
                       app:layout_constraintLeft_toRightOf="@id/todate"
                       android:textColor="@color/white"
                       android:textColorHint="@color/white"
                       />

               </LinearLayout>
               <android.support.v7.widget.AppCompatSpinner
                   android:layout_marginTop="5dp"
                   style="@style/mySpinnerItemStyle"
                   android:background="@drawable/bk_spinner"
                   android:textColor="@color/dark_mint"
                   android:textColorHint="@color/dark_mint"
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:hint="@string/product"
                   android:id="@+id/prod_name"

                   app:layout_constraintTop_toBottomOf="@+id/filter"
                   android:fontFamily="@font/saudi"
                   />
               <android.support.v7.widget.AppCompatSpinner

                   android:textColor="@color/dark_mint"
                   android:textColorHint="@color/dark_mint"
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:hint="@string/product"
                   android:id="@+id/order_type"
                   android:layout_marginTop="5dp"
                   app:layout_constraintTop_toBottomOf="@+id/nameLN"
                   android:background="@drawable/bk_spinner"
                   android:entries="@array/orderType"
                   style="@style/mySpinnerItemStyle"
                   />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   app:layout_constraintTop_toBottomOf="@+id/prod_name"
                   android:id="@+id/nameLN"
                   android:weightSum="3">
                   <android.support.v7.widget.AppCompatSpinner
                       style="@style/mySpinnerItemStyle"
                       android:background="@drawable/bk_spinner"
                       android:textColor="@color/dark_mint"
                       android:textColorHint="@color/dark_mint"
                       android:layout_width="0dp"
                       android:layout_weight="2"
                       android:layout_height="50dp"
                       android:hint="@string/whight"
                       android:layout_marginTop="5dp"
                       android:id="@+id/users"
                       app:layout_constraintRight_toRightOf="parent"
                       android:fontFamily="@font/saudi"
                       />
                   <android.support.v7.widget.AppCompatSpinner
                       android:layout_marginTop="5dp"
                       android:background="@drawable/bk_spinner"
                       android:textColor="@color/dark_mint"
                       android:textColorHint="@color/dark_mint"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="50dp"
                       android:id="@+id/days"
                       android:layout_marginLeft="5dp"
                       app:layout_constraintLeft_toLeftOf="parent"
                       app:layout_constraintTop_toBottomOf="@+id/prod_name"
                       android:fontFamily="@font/saudi"
                       android:entries="@array/pointDay"
                       style="@style/mySpinnerItemStyle"
                       />
               </LinearLayout>
               <Button
                   android:layout_marginTop="15dp"
                   android:padding="3dp"
                   android:drawableLeft="@android:drawable/ic_lock_idle_charging"
                   android:fontFamily="@font/saudi"
                   android:layout_width="wrap_content"
                   android:layout_height="30dp"
                   android:id="@+id/filter"
                   app:layout_constraintLeft_toLeftOf="parent"
                   android:textColor="@color/white"
                   app:layout_constraintTop_toBottomOf="@+id/ln"
                   android:text="@string/filter"

                   android:background="@drawable/bk_button_logout"/>

           </android.support.constraint.ConstraintLayout>
           <RelativeLayout

               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <TextView
                   android:id="@+id/noItem"
                   android:visibility="gone"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/noItem"
                   android:fontFamily="@font/saudi"
                   android:textSize="20dp"
                   android:layout_centerInParent="true"
                   android:layout_alignParentTop="true"
                   android:layout_marginTop="20dp"/>
               <ProgressBar
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerInParent="true"
                   android:layout_alignParentTop="true"
                   android:layout_marginTop="10dp"
                   android:id="@+id/progress"

                   />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_alignParentTop="true"
                   android:layout_alignParentBottom="true">
                   <android.support.v7.widget.RecyclerView
                       android:id="@+id/request_list"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:paddingBottom="135dp"
                       tools:listitem="@layout/row_order_item" />
                   <TextView
                       android:id="@+id/txt"
                       android:text="       "
                       android:layout_width="match_parent"
                       android:layout_height="50dp"
                       />
               </LinearLayout>
           </RelativeLayout>
       </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>